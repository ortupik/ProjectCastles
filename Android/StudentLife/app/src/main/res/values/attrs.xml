<resources>
    <declare-styleable name="QiscusAudioRecorderView">
        <attr name="qrecord_cancelSrc" format="color|reference"/>
        <attr name="qrecord_stopSrc" format="color|reference"/>
    </declare-styleable>
    <declare-styleable name="PagedHeadListView">
        <attr name="headerHeight" format="dimension" />
        <attr name="disableVerticalTouchOnHeader" format="boolean" />
        <attr name="indicatorBgColor" format="color" />
        <attr name="indicatorColor" format="color" />
        <attr name="indicatorType" format="enum" >
            <enum name="none" value="0"/>
            <enum name="topAligned" value="1"/>
            <enum name="bottomAligned" value="2"/>
        </attr>
        <attr name="pageTransformer" format="enum" >
            <enum name="depth" value="0" />
            <enum name="zoomout" value="1" />
            <enum name="rotate" value="2" />
            <enum name="scale" value="3" />
            <enum name="flip" value="4" />
            <enum name="accordion" value="5" />
        </attr>
    </declare-styleable>
</resources>