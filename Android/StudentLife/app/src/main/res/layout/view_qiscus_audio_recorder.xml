<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/qiscus_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.5"
        android:background="@color/qiscus_light_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/button_cancel_record"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_qiscus_cancel_record"/>
        </FrameLayout>

        <TextView
            android:id="@+id/record_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/qiscus_primary_text"
            android:textSize="14sp"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/button_stop_record"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_qiscus_send_on"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>