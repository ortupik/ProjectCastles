<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="right|top" android:layout_margin="10dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/ic_action_next_item"
                android:layout_gravity="right|top"
                android:textColor="#ffffffff"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Next"
                android:id="@+id/textView" android:layout_gravity="right" android:textStyle="bold"
                android:textColor="#ffffffff"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="left|top">
        <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/classImageView" android:layout_margin="10dp"/>

    </LinearLayout>

</FrameLayout>