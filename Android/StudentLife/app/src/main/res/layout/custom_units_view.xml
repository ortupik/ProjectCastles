<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:background="@drawable/border" android:weightSum="1"
	android:layout_marginBottom="8dp"
	android:layout_marginTop="5dp">


	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_weight="0.06">
		<TextView android:id="@+id/name"
				  android:textSize="16sp"
				  android:textStyle="bold"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content" android:textColor="@color/material_teal" android:text="unit Title"
				  android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
		<TextView android:id="@+id/unitCode"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content" android:text="unit ID"
				  android:layout_alignBottom="@+id/name" android:layout_alignParentEnd="true"
				  android:layout_marginRight="10dp"
			android:textColor="@color/tableHeader" />
	</RelativeLayout>
	<TextView android:id="@+id/lecturer"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content" android:text="lecturer"
		android:textColor="@android:color/black" />
</LinearLayout>
