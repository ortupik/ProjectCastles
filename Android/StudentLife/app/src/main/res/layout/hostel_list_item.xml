<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:elevation="7dp">
<LinearLayout
	android:orientation="horizontal"
	android:layout_width="match_parent"
 	android:layout_height="wrap_content">

	<com.makeramen.roundedimageview.RoundedImageView
			android:id="@+id/hostelImage"
			android:layout_width="76dp"
			android:layout_height="76dp"
			android:layout_marginBottom="8dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginTop="4dp"
			android:clickable="true"
		     app:riv_corner_radius="5dp"
			android:src="@drawable/dekutresource"
			/>

	<LinearLayout
				  android:orientation="vertical"
				  android:layout_width="fill_parent"
				  android:layout_height="wrap_content">

		<RelativeLayout
					  android:orientation="horizontal"
					  android:layout_width="fill_parent"
					  android:layout_height="wrap_content" android:layout_marginTop="10dp">

 	<TextView android:id="@+id/hostelNameView"
		android:textSize="18sp"
		android:textStyle="bold" 
		android:textColor="@color/colorPrimary"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:text="Hostel Name"/>

		</RelativeLayout>

		<TextView android:id="@+id/hostelDistanceView"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content" android:text="1 KM from Kimathi" android:textColor="@color/dark_gray"
				  android:layout_marginTop="5dp" android:textSize="14dp"/>

		<com.tigerpenguin.widget.simpleratingbar.SimpleRatingBar
			android:id="@+id/myRatingBar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:paddingBottom="5dp" />

	</LinearLayout>

	<TextView
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:id="@+id/hostel_id"
		    android:visibility="invisible"/>


</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/qiscus_divider"
		></View>

</android.support.v7.widget.CardView>