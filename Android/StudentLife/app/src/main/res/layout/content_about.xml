<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView4"
        android:paddingTop="16dp"
        android:layout_marginTop="15dp" />

        <RelativeLayout
        android:id="@+id/content_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.slife.chris.studentlife.utilities.About"
        tools:showIn="@layout/activity_about">


            <TextView
            android:text="@string/created_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
                android:typeface="normal"
            android:fontFamily="cursive"
                android:textSize="15sp"
            android:textAlignment="center"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true" />

            <TextView
            android:text="Test Beta Version 0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:id="@+id/textView9"
            android:textSize="18sp"
                android:fontFamily="cursive"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp" />


        </RelativeLayout>

        <TextView
            android:text="For feedback/suggestions please send to:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:id="@+id/textView14"
            android:layout_above="@+id/textView11"
            android:layout_centerHorizontal="true" />
        <TextView
            android:text="chrisadriane.ca@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textColor="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="oturpik.github.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="7dp"
            android:id="@+id/textView15"
            android:textColor="@color/material_teal"
            />
        </LinearLayout>
</ScrollView>

